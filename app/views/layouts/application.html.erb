<!DOCTYPE html>
<html>
<head>
  <title>Acebook</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= favicon_link_tag 'JusticeMoo.png' %>
</head>

<h1 class="logo"><%= link_to "ⒶⒸⒺⒷᴼᴼⓀ", root_path %></h1>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if user_signed_in? %>
  <div class="logoutnav">
    <p> Currently logged in as <%= current_user.user_name %> <br> </p>
    <a href="<%= destroy_user_session_path%>" data-method="delete"> Sign out
    </a>
  </div>
  <% else %>
  <br>

  <div class="homenav">
    <a class="Sign_in" href="<%= new_user_session_path%>"> Sign in
    </a>
    <a class="Sign_up" href="<%=  new_registration_path(User) %>">Sign up</a>

    <% end %>
  </div>
  <div class="mainbody">
    <%= yield %>
  </div>
  <%= image_tag("JusticeMoo.png", :alt => "JusticeMoo") %>
</body>
</html>
